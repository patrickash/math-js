{
  "root": true,
  "extends": [
    "eslint:recommended",
    // import/recommended = import/errors + import/warnings
    // @see eslint-plugin-import
    "plugin:import/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "globals": {
    "IS_DEVELOPMENT": "readonly"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6" : true
  },
  "ignorePatterns": [
    "src/**/*.test.js",
    "jest.config.js"
  ],
  "rules": {
    "no-console": 1 // 1 = Warning; 2 = Error; 0 = Off
  }
}
